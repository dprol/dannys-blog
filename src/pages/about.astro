---
import BaseLayout from "@layouts/BaseLayout.astro";
import { Image } from "astro:assets";
---

<style>
  section {
    display: flex;
    gap: 1rem;
    flex-direction: column;

    .avatar-container {
      display: grid;
      place-items: center;

      .avatar-frame {
        background-color: var(--green);
        border-radius: 50%;

        img {
          margin: 0.4rem;
          border-radius: 50%;
          max-width: 20vw;
        }
      }
    }
  }

  @container main (min-width: 700px) {
    section {
      flex-direction: row;
    }
  }
</style>
